{% extends 'base.html.twig' %}

{% block title %}Produits chercher !{% endblock %}

{% block content %}
    {% if app.request.method == 'POST' %}
    <div>
        {% if product | length == 0 %}
            <h4>Aucun résulat pour votre recherche.</h4>
        {% else %}
            <h3 class="mt-3">Vos résulats de recherche :</h3>
            {% for product in product %}
                <div class="mt-3 p-3 bg-light border rounded">
                    <a href="">
                        <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ product.name }}</h6>
                    </a>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endif %}
{% endblock %}
